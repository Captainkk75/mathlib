open limits

variables {J : Type*} [category J] {ùíü : J ‚•§ grothendieck F}
(cb : cocone (ùíü ‚ãô forget F)) (c : cocone ùíü)

def fiber_diagram : J ‚•§ (F.obj cb.X).1 :=
costructured_arrow.of_cocone _ _ cb.Œπ ‚ãô costructured_arrow.pre _ _ _ ‚ãô fiber_push _ _

lemma fiber_diagram_map {j j' : J} (f : j ‚ü∂ j') :
  (fiber_diagram ((forget F).map_cocone c)).map f =
  (@functor.map _ _ _ _ (fiber_push_over F c.X)
    (over.mk (c.Œπ.app j)) (over.mk (c.Œπ.app j')) (over.hom_mk (ùíü.map f))).left := rfl

def fiber_cocone : cocone (fiber_diagram ((forget F).map_cocone c)) :=
{ X := c.X.fiber,
  Œπ := { app := Œª j, ((fiber_push_over _ _).obj (over.mk (c.Œπ.app j))).hom,
    naturality' := Œª j j' f, by { dsimp [fiber_diagram_map], simp } } }


variable (cf : cocone (fiber_diagram cb))

@[simps]
def total_cocone : cocone ùíü :=
{ X := { base := cb.X, fiber := cf.X },
  Œπ := { app := Œª j, { base := cb.Œπ.app j, fiber := cf.Œπ.app j },
    naturality' := Œª j j' f, by { erw category.comp_id, ext,
    { erw ‚Üê category.assoc, exact cocone.w cf f }, exact cocone.w cb f } } }

variables {cb} (lb : is_colimit cb)

def desc_base : cb.X ‚ü∂ c.X.base := lb.desc ((forget F).map_cocone c)

def fiber_trans :
  fiber_diagram ((forget F).map_cocone c) ‚ü∂
  fiber_diagram cb ‚ãô F.map (desc_base c lb) :=
{ app := Œª j, eq_to_hom (by {dsimp, erw lb.fac, refl}) ‚â´ (fiber_push_comp F _).app _,
  naturality' := Œª j j' f, by { rw category.assoc,
    erw ‚Üê nat_trans.naturality, dsimp [fiber_diagram, fiber_push],
    erw eq_to_hom.family_congr (fiber_push_map _) (lb.fac _ j'), simpa } }

variable [‚àÄ {X Y Z} (f : X ‚ü∂ Y) (g : Y ‚ü∂ Z), is_iso (F.map_comp f g)]

instance {X Y : C} (f : X ‚ü∂ Y) : is_iso (fiber_push_comp F f) :=
by { fapply nat_iso.is_iso_of_is_iso_app _, dsimp [fiber_push_comp], apply_instance }

instance : is_iso (fiber_trans c lb) :=
by { fapply nat_iso.is_iso_of_is_iso_app _, dsimp [fiber_trans], apply_instance }

lemma fiber_push_total_cocone (j : J) :
  fiber_push_map ((total_cocone cb cf).Œπ.app j) (desc_base c lb) =
  eq_to_hom (by {erw lb.fac, refl}) ‚â´
  (fiber_trans c lb).app j ‚â´ (F.map (desc_base c lb)).map (cf.Œπ.app j) :=
by { dsimp [fiber_trans], simpa }

variables {cf} (lf : ‚àÄ {c : C} (f : cb.X ‚ü∂ c), is_colimit (functor.map_cocone (F.map f) cf))

noncomputable def total_cocone_is_colimit : is_colimit (total_cocone cb cf) :=
let cf' := Œª c, (cocones.precompose (inv (fiber_trans c lb))).obj (fiber_cocone c) in
{ desc := Œª c,
  { base := desc_base c lb,
    fiber := (lf (desc_base c lb)).desc (cf' c) },
  fac' := Œª c j, by { ext, swap, apply lb.fac,
    { dsimp, simp only [fiber_push_total_cocone, category.assoc], erw (lf _).fac, simpa } },
  uniq' := Œª c f h, by {
    have := lb.uniq ((forget F).map_cocone c) f.base (Œª j, by {dsimp, rw ‚Üê h, refl}),
    ext, swap, exact this,
    { apply (lf _).uniq (cf' c), intro j,
      change _ = _ ‚â´ (c.Œπ.app j).fiber, rw congr (h j).symm, dsimp,
      rw eq_to_hom.family_congr (fiber_push_map _) this, erw fiber_push_total_cocone, simpa } } }

