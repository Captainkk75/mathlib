@[simp] lemma prod_eq_iff_eq {Œ± Œ≤ : Type*} {s‚ÇÅ s‚ÇÇ : set Œ±} {t : set Œ≤} (ht : t.nonempty) :
  s‚ÇÅ √óÀ¢ t = s‚ÇÇ √óÀ¢ t ‚Üî s‚ÇÅ = s‚ÇÇ :=
begin
  obtain ‚ü®b, hb‚ü© := ht,
