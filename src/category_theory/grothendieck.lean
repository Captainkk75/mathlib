{ has_colimit := Œª ùíü, { exists_colimit := ‚ü® { cocone := _, is_colimit :=
  let base := get_colimit_cocone (ùíü ‚ãô forget F) in
  total_cocone_is_colimit base.is_colimit (Œª _ f,
    is_colimit_of_preserves _ (get_colimit_cocone (fiber_diagram base.cocone)).is_colimit ) } ‚ü© } }
