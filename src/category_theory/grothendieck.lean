variables (F)

/-- The forgetful functor from `grothendieck F` to the source category. -/
@[simps]
def forget : grothendieck F ‚•§ C :=
{ obj := Œª X, X.1,
  map := Œª X Y f, f.1 }

@[simps obj]
def fiber_push (X : C) : costructured_arrow (forget F) X ‚•§ (F.obj X).1 :=
{ obj := Œª f, (F.map f.hom).obj f.left.fiber,
  map := Œª f‚ÇÅ f‚ÇÇ g, eq_to_hom (by erw costructured_arrow.w g) ‚â´ fiber_push_map g.left f‚ÇÇ.hom,
  map_id' := Œª f, by { dsimp, simp },
  map_comp' := Œª _ _ _ g‚ÇÅ g‚ÇÇ, by { rw eq_to_hom.family_congr
    (fiber_push_map g‚ÇÅ.left) (costructured_arrow.w g‚ÇÇ).symm, dsimp, simp } }

def fiber_push_over (X : grothendieck F) : over X ‚•§ over X.fiber :=
{ obj := Œª f, over.mk f.hom.fiber,
  map := Œª _ _ g, over.hom_mk
    ((fiber_push F X.base).map ((costructured_arrow.post _ (forget F) _).map g))
    (by {rw congr (over.w g).symm, dsimp [fiber_push], simpa}) }

/-- A 2-natural transformation. -/
def fiber_push_comp {X Y : C} (f : X ‚ü∂ Y) :
  costructured_arrow.map f ‚ãô fiber_push F Y ‚ü∂ fiber_push F X ‚ãô F.map f :=
{ app := Œª _, (F.map_comp _ _).app _, -- Œª e, (F.map_comp e.hom f).app e.left.fiber,
  naturality' := Œª f‚ÇÅ f‚ÇÇ g, by { let fn := Œª g, F.map_comp g f,
    have := eq_to_hom.family_congr fn (costructured_arrow.w g).symm,
    dsimp [fn, fiber_push] at ‚ä¢ this, simp [this] } }

end

