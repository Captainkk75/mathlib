namespace category_theory

variables {C : Type*} [category.{v} C] (F : lax_functor_to_Cat C)

/--
The Grothendieck construction (often written as `‚à´ F` in mathematics) for a functor `F : C ‚•§ Cat`
gives a category whose
* objects `X` consist of `X.base : C` and `X.fiber : F.obj base`
* morphisms `f : X ‚ü∂ Y` consist of
  `base : X.base ‚ü∂ Y.base` and
  `f.fiber : (F.map base).obj X.fiber ‚ü∂ Y.fiber`
-/
@[nolint has_inhabited_instance]
structure grothendieck :=
(base : C)
(fiber : F.obj base)

namespace grothendieck

variables {F}

/--
A morphism in the Grothendieck category `F : C ‚•§ Cat` consists of
`base : X.base ‚ü∂ Y.base` and `f.fiber : (F.map base).obj X.fiber ‚ü∂ Y.fiber`.
-/
structure hom (X Y : grothendieck F) :=
(base : X.base ‚ü∂ Y.base)
(fiber : (F.map base).obj X.fiber ‚ü∂ Y.fiber)

@[ext] lemma ext {X Y : grothendieck F} (f g : hom X Y)
  (w_base : f.base = g.base) (w_fiber : eq_to_hom (by rw w_base) ‚â´ f.fiber = g.fiber) : f = g :=
begin
  cases f; cases g,
  congr,
  dsimp at w_base,
  induction w_base,
  refl,
  dsimp at w_base,
  induction w_base,
  simpa using w_fiber,
end

/--
The identity morphism in the Grothendieck category.
-/
@[simps]
def id (X : grothendieck F) : hom X X :=
{ base := ùüô X.base,
  fiber := (F.map_id X.base).app X.fiber }

instance (X : grothendieck F) : inhabited (hom X X) := ‚ü®id X‚ü©


variables {W X Y : grothendieck F} {Z : C}

section fiber_push_map

variables (e : hom W X) (f : hom X Y) (g : Y.base ‚ü∂ Z)

def fiber_push_map : (F.map (f.base ‚â´ g)).obj X.fiber ‚ü∂ (F.map g).obj Y.fiber :=
(F.map_comp f.base g).app X.fiber ‚â´ (F.map g).map f.fiber

/--
Composition of morphisms in the Grothendieck category.
-/
@[simps]
def comp : hom W Y :=
{ base := e.base ‚â´ f.base,
  fiber := fiber_push_map e f.base ‚â´ f.fiber }

instance : category (grothendieck F) :=
{ hom := Œª X Y, grothendieck.hom X Y,
  id := Œª X, grothendieck.id X,
  comp := Œª X Y Z f g, grothendieck.comp f g,
  id_comp' := Œª X Y f, by { ext, { dsimp [fiber_push_map], simp }, simp },
  comp_id' := Œª X Y f, by { ext, { dsimp [fiber_push_map], simp }, simp },
  assoc' := Œª W X Y Z e f g, by { ext, { dsimp [fiber_push_map], simp }, simp } }

end fiber_push_map

@[simp] lemma id_base' : hom.base (ùüô X) = ùüô X.base := rfl

@[simp] lemma id_fiber' (X : grothendieck F) :
  hom.fiber (ùüô X) = (F.map_id X.base).app X.fiber := rfl

lemma congr {X Y : grothendieck F} {f g : X ‚ü∂ Y} (h : f = g) :
  f.fiber = eq_to_hom (by rw h) ‚â´ g.fiber := by { subst h, simp }

section fiber_push_map

variables {Z' : C} (e : W ‚ü∂ X) (f : X ‚ü∂ Y) (g : Y.base ‚ü∂ Z) (h : Z ‚ü∂ Z')

@[simp] lemma comp_base' : (e ‚â´ f).base = e.base ‚â´ f.base := rfl

@[simp] lemma comp_fiber' : (e ‚â´ f).fiber = fiber_push_map e f.base ‚â´ f.fiber := rfl

@[simp]
lemma fiber_push_map_id_left : fiber_push_map (ùüô Y) g = eq_to_hom (by simp) :=
by { dsimp [fiber_push_map], simpa }

@[simp]
lemma fiber_push_map_id_right : (f ‚â´ ùüô Y).fiber = eq_to_hom (by simp) ‚â´ f.fiber :=
congr (by simp)

@[simp, reassoc]
lemma fiber_push_map_comp_left : fiber_push_map (e ‚â´ f) g =
  eq_to_hom (by simp) ‚â´ fiber_push_map e (f.base ‚â´ g) ‚â´ fiber_push_map f g :=
by { dsimp [fiber_push_map], simp }

@[simp, reassoc]
lemma fiber_push_map_comp_right : fiber_push_map f (g ‚â´ h) ‚â´ (F.map_comp _ _).app _ =
  eq_to_hom (by simp) ‚â´ (F.map_comp _ _).app _ ‚â´ (F.map h).map (fiber_push_map f g) :=
by { dsimp [fiber_push_map], simp }

end fiber_push_map


