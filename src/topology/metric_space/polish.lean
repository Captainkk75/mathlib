/-- Given a closed embedding into a Polish space, the source space is also Polish. -/
lemma closed_embedding.polish_space {Œ± : Type*} {Œ≤ : Type*}
  [topological_space Œ±] [topological_space Œ≤]
  [polish_space Œ≤] {f : Œ± ‚Üí Œ≤} (hf : closed_embedding f) :
  polish_space Œ± :=
begin
  letI : metric_space Œ≤ := polish_space_metric Œ≤,
